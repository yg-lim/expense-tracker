doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    title Spending Tracker
    link(rel="stylesheet", href="/stylesheets/application.css")
  body
    header
      block header
        div(class="flex space-between")
          a(href=`/expenses${getPrevMonthPath(year, month)}`) Prev
          h2(class="text-center") #{monthToString(month)} #{year}
          a(href=`/expenses${getNextMonthPath(year, month)}` class=(checkIsCurrentMonth(year, month) ? "hidden" : "")) Next
        div
          p(class="subhead gray text-center") Total Spending
          h1(class="text-center") $#{getTotal(expenses)}
    main
      - let kinds = Object.keys(flash || {});
        if kinds.length > 0
          ul(class="flash")
            each kind in kinds
              each message in flash[kind]
                li(class=kind)= message
      block main
        section(class="form-section")
          form(action=`/expenses/${year}/${month}` method="POST" class="new-expense-form") 
            fieldset(class="new-expense-text-inputs")
              dl
                dt
                  label(for="description" class="body-2") Description of Expense
                dd
                  input(type="text" name="description" id="description" value=description)
              div(class="flex")
                dl(class="margin-right")
                  dt
                    label(for="amount" class="body-2") Amount
                  dd
                    input(type="number" name="amount" id="amount" min="0.01" step="0.01" value=amount)
                dl(class="margin-left")
                  dt
                    label(for="date" class="body-2") Date (YYYY-MM-DD)
                  dd
                    input(type="date" name="date" id="date" value=date)
            fieldset(class="new-expense-controls")
              button(class="cta") Add Expense
        section(class="expenses-section")
          h3(class="border-bottom") Expenses
          if expenses.length === 0
            p(class="body-2 padding-vertical") No expenses for this month.
          else
            ul
              each expense in expenses
                li(class="flex space-between padding-vertical align-center border-bottom")
                  div(class="flex align-center")
                    p(class="body-2 text-center gray margin-right medium") #{getDay(expense.date)}<br>#{getDate(expense.date)}
                    p(class="body-1")= expense.description
                  div(class="flex align-baseline")
                    p(class="body-1 medium text-right")= `$${expense.amount}`
                    a(href=`/expenses/edit/${expense.id}` class="text-right margin-left small-link") Edit
    block footer
      footer
        form(action="/signout" method="post" class="text-center signout-form")
          input(type="hidden", name="signout" value="true")
          button(class="destructive") Sign Out